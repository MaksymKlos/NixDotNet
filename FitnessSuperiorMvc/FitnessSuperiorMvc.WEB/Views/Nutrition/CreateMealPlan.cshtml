@{
    ViewData["Title"] = "Create meal plan";
}
@model FitnessSuperiorMvc.WEB.ViewModels.Services.Nutrition.MealPlanViewModel
<div class="main__content m-height">
    <div class="main__title center">
        Create complex
    </div>
    <div class="main__text center">
        Fill out the form below to create your own fitness program
    </div>
    <form class="main__form center" asp-action="CreateMealPlan" asp-controller="Nutrition" method="post">
        <div class="form__input-group row">
            <label class="form__label col-md-2" asp-for="Name">Meal plan name:</label>
            <input class="form__input col-md-3" type="text" asp-for="Name" placeholder="from 5 to 50 symbols">
            <span asp-validation-for="Name" class="text-danger d-block"></span>
        </div>
        <div class="form__input-group row">
            <label class="form__label col-md-2" asp-for="Description">Description:</label>
            <textarea class="form__input col-md-3" type="text" asp-for="Description" rows="2" placeholder="up to 300 symbols"></textarea>
            <span asp-validation-for="Description" class="text-danger d-block"></span>
        </div>
        <button type="submit" class="btn btn-light">Create</button>
    </form>

</div>